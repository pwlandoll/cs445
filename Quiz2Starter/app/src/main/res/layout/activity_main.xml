<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kirsch.jcu.edu.quiz2.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0">

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button00"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button01"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button02"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button03"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0">

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button10"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button11"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button12"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button13"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0">

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button20"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button21"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button22"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button23"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0">

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button30"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button31"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button32"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />

            <Button
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/button33"
                android:background="@color/blue"
                android:layout_margin="@dimen/padding"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_column="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/row0Button"
                android:layout_column="0"
                android:layout_weight="1"
                android:text="@string/Top"
                android:onClick="row0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Middle"
                android:id="@+id/row2Button"
                android:layout_column="1"
                android:layout_weight="1"
                android:onClick="row2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Column"
                android:id="@+id/colButton"
                android:layout_column="2"
                android:layout_weight="1"
                android:onClick="col" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/H"
                android:id="@+id/hButton"
                android:layout_column="3"
                android:layout_weight="1"
                android:onClick="h" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_column="0" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_column="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Reset"
        android:id="@+id/resetButton"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true"
        android:onClick="reset" />
</RelativeLayout>
