<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.jcu.plandoll16.quiz5.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:width="@dimen/textview_size"
        android:height="@dimen/textview_size"
        android:background="@color/grey" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/topTextView"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/textview_size"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space"
        android:layout_centerHorizontal="true"
        android:id="@+id/buttonLayout"></LinearLayout>
</RelativeLayout>
