<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.jcu.plandoll16.listenerexample2_3.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/prompt"
        android:id="@+id/promptTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="50px"
        android:layout_below="@+id/promptTextView"
        android:id="@+id/space"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/inputEditText"
        android:layout_below="@+id/space"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />
        <!--android:layout_marginTop="51dp" /> -->

    <Space
        android:layout_width="20px"
        android:layout_height="50px"
        android:layout_below="@+id/inputEditText"
        android:layout_centerHorizontal="true"
        android:id="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/OutputMessage"
        android:id="@+id/outputMessageTextView"
        android:layout_below="@+id/space2"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="50px"
        android:layout_below="@+id/outputMessageTextView"
        android:layout_centerHorizontal="true"
        android:id="@+id/space3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Zero"
        android:id="@+id/outputTextView"
        android:layout_below="@+id/space3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
